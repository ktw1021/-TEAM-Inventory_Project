<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="order">
	<!-- 목록 -->
	<insert id="insert" parameterType="String">
		insert into book_order
		(branch_id, checked) VALUES(#{orderId}, '0')
	</insert>
	<select id="getMax" resultType="String">
		SELECT MAX(order_id) AS
		max_order_id FROM book_order
	</select>
	<insert id="insertDetail" parameterType="OrderBasketVo">
		insert into order_basket
		(order_id, branch_id, book_code, quantity) VALUES(#{order_id}, '1',
		#{book_code},#{quantity})
	</insert>
	
	<select id="selectOrderList" resultType="OrderBasketVo">
		SELECT * FROM order_basket
	</select>

</mapper>